<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_browse_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:padding="@dimen/grid_item_spacing"
        android:verticalSpacing="@dimen/grid_item_spacing"
        android:horizontalSpacing="@dimen/grid_item_spacing"
        android:background="@color/grid_background"
        android:columnWidth="@dimen/grid_column_width"
        tools:context=".ui.fragment.BrowseMoviesFragment"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminateTintMode="add"
        android:visibility="gone"/>

</RelativeLayout>