<com.github.ksoichiro.android.observablescrollview.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_scroll_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/movie_cover_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <ImageView
                android:id="@+id/movie_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:background="@android:color/white"
                android:minHeight="@dimen/cover_min_height"
                android:src="@drawable/placeholder_backdrop"/>

            <ImageView
                android:id="@+id/movie_cover_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_circle_filled_black_48dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

        <View
            android:id="@+id/anchor"
            style="@style/MovieDetailAnchor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/poster_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:orientation="vertical"
            android:clipChildren="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/anchor">

            <RelativeLayout
                android:id="@+id/movie_poster_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_poster"
                    android:layout_marginLeft="@dimen/movie_poster_margin_left"
                    android:layout_marginBottom="@dimen/movie_poster_margin_bottom"
                    android:layout_marginStart="@dimen/movie_poster_margin_left"
                    android:layout_marginTop="@dimen/movie_poster_margin_top"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/movie_poster"
                    android:layout_toRightOf="@id/movie_poster"
                    android:orientation="vertical"
                    android:padding="@dimen/title_layout">

                    <TextView
                        android:id="@+id/movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_xxlarge"
                        android:textStyle="bold"
                        android:textColor="@color/body_text_1"
                        android:text="Deadpool"/>

                    <TextView
                        android:id="@+id/movie_release_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        android:text="February 2016" />

                    <TextView
                        android:id="@+id/movie_average_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        android:text="Rating: 8/10" />

                    <TextView
                        android:id="@+id/movie_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        android:text="24677"
                        android:visibility="gone"/>

                </LinearLayout>

            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_break_height"
                android:background="@color/line_break_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/body_text_1"
                android:text="Plot Synopsis"
                android:paddingBottom="5dp"
                android:paddingTop="@dimen/synopsis_padding"
                android:paddingLeft="@dimen/synopsis_padding"
                android:paddingRight="@dimen/synopsis_padding"/>

            <TextView
                android:id="@+id/plot_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/body_text_2"
                android:textSize="@dimen/text_size_medium"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/synopsis_padding"
                android:paddingRight="@dimen/synopsis_padding"
                android:text="@string/placeholder_movie_plot"/>

        </LinearLayout>

    </RelativeLayout>

</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
