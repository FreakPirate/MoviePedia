<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsing_toolbar"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/movie_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/poster_gray"
                android:minHeight="@dimen/detail_min_height"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scrollview_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/poster_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:orientation="vertical"
            android:clipChildren="false"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/movie_poster_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_poster"
                    android:layout_marginLeft="@dimen/movie_poster_margin_left"
                    android:layout_marginBottom="@dimen/movie_poster_margin_bottom"
                    android:layout_marginStart="@dimen/movie_poster_margin_left"
                    android:layout_marginTop="@dimen/movie_poster_margin_top"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/movie_poster"
                    android:layout_toRightOf="@id/movie_poster"
                    android:orientation="vertical"
                    android:padding="@dimen/title_layout">

                    <TextView
                        android:id="@+id/movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_xxlarge"
                        android:textStyle="bold"
                        android:textColor="@color/body_text_1"
                        android:text="Deadpool"/>

                    <TextView
                        android:id="@+id/movie_release_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        android:text="February 2016" />

                    <TextView
                        android:id="@+id/movie_average_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        android:text="Rating: 8/10" />

                    <TextView
                        android:id="@+id/movie_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        android:text="Adult: No"
                        android:visibility="gone"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_break_height"
                android:background="@color/line_break_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/body_text_1"
                android:text="@string/plot_synopsis"
                android:paddingBottom="5dp"
                android:paddingTop="@dimen/synopsis_padding"
                android:paddingLeft="@dimen/synopsis_padding"
                android:paddingRight="@dimen/synopsis_padding"/>

            <TextView
                android:id="@+id/plot_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/body_text_2"
                android:textSize="@dimen/text_size_medium"
                android:paddingTop="@dimen/synopsis_padding_top"
                android:paddingBottom="@dimen/synopsis_padding_bottom"
                android:paddingLeft="@dimen/synopsis_padding"
                android:paddingRight="@dimen/synopsis_padding"
                android:text="@string/placeholder_movie_plot"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>